{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}